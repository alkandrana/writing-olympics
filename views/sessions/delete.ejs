<% title = `Delete Session` %>
<h1>Confirm Delete Session</h1>
<h2 class="text-danger">Are you sure you want to delete this session?</h2>
<ul class="list-group w-50">
  <li class="list-group-item">Scene: <%= session.sceneId %></li>  
  <li class="list-group-item">Start Time: <%= session.start.toLocaleString() %></li>
  <li class="list-group-item">End Time: <%= session.stop.toLocaleString() %></li>
  <li class="list-group-item">Words: <%= session.words %></li>
</ul>
<div class="row">
  <form method="post" action="/sessions/delete/<%= session.id %>" class="col-2">
    <button type="submit" class="btn btn-danger">Delete</button>
  </form>
  <a href="/goals/" class="col-2 btn btn-warning">Cancel</a>
</div>
