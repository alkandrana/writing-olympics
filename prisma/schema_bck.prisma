generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Goal {
	id Int @id @default(autoincrement())
	title String
	start DateTime @db.Date
	stop DateTime @db.Date
	target Int
	sessions Session[]
}

model Session {
	id Int @id @default(autoincrement())
	start DateTime
	stop DateTime
	words Int
  sceneId String
	goal Goal @relation(fields: [goalId], references: [id])
	goalId Int
}
